    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Backgroud"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar_setting" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_margin="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txt_dark_mode"
                    android:layout_weight="1"
                    style="@style/TextColor"
                    android:textSize="15sp"/>

                <Switch
                    android:id="@+id/sDarkMode"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_setting_ngonngu"
                    style="@style/TextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_language"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinner_language"
                    android:layout_width="0dp"
                    android:layout_height="48sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_below="@id/txt_setting_ngonngu" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>
