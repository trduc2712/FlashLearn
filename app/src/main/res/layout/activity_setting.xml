<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.SettingActivity"
    android:id="@+id/drawerLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Backgroud"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_overview"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/pink0"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_dark_mode"
                        style="@style/TextColor"
                        android:textSize="17sp"/>
                    <Switch
                        android:id="@+id/sDarkMode"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/txt_setting_ngonngu"
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_language"
                        android:textSize="17sp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_height="48dp"
                        android:id="@+id/spinner_language"
                        android:layout_below="@+id/txt_setting_ngonngu" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_notice"
                        android:layout_marginRight="20dp"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_ontap"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_sub_notice"
                        android:textColor="@color/gray"
                        android:layout_below="@id/txt_setting_ontap"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="right"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_set_oder"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_thietlap"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_sub_set_oder"
                        android:textColor="@color/gray"
                        android:layout_below="@id/txt_setting_thietlap"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt ôn tập"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/pink0"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ hiển thị hình ảnh cho định nghĩa"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_hinhanh"
                        android:layout_marginRight="50dp"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:text="Ấn văn bản định nghĩa cho thẻ có chứa hình ảnh trong khi ôn tập"
                        android:layout_below="@id/txt_setting_hinhanh"
                        android:textColor="@color/gray"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiển thị định nghĩa đầu tiên"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_dinhnghia"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:text="Hiển thị định nghĩa thẻ đầu tiên khi thực hành"
                        android:layout_below="@id/txt_setting_dinhnghia"
                        android:textColor="@color/gray"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xáo trộn thẻ"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_xoatron"
                        android:textSize="17sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng thẻ mỗi vòng"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_soluongthe"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:text="10 thẻ"
                        android:textColor="@color/gray"
                        android:layout_below="@id/txt_setting_soluongthe"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đặt trước 5 thẻ"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_dattruocthe"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:text="Sau khi nối tất cả các cặp thẻ, chỉ thêm 5 thẻ mới cho vòng tiếp theo"
                        android:layout_below="@id/txt_setting_dattruocthe"
                        android:textColor="@color/gray"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ôn tập bằng âm thanh"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/pink0"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đọc thuật ngữ"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_docthuatngu"
                        android:textSize="17sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đọc định nghĩa"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_docdinhnghia"
                        android:textSize="17sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/track"
                        android:gravity="right"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tốc độ đọc"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_tocdodoc"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="50dp"
                        android:text="Bình thường"
                        android:textColor="@color/gray"
                        android:layout_below="@id/txt_setting_tocdodoc"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao lưu"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/pink0"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạo bản sao"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_taobansao"
                        android:textSize="17sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khôi phục"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_khoiphuc"
                        android:textSize="17sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/pink0"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điều khoản sử dụng"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_dieukhoan"
                        android:textSize="17sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/BackgroudInit"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chính sách bảo mật"
                        style="@style/TextColor"
                        android:id="@+id/txt_setting_chínhachbaomat"
                        android:textSize="17sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        style="@style/Backgroud"
        android:layout_gravity = "start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>