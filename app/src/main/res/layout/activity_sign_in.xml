<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUpActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="30dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/boder_login"
                android:id="@+id/edEmail"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Email"

                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edPassword"
                android:background="@drawable/boder_login"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/showpass"
                android:textColor="@color/black"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Đăng nhập"
                android:id="@+id/btnLogin"
                android:backgroundTint="@color/pink1"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "10dp"/>
            <TextView
                android:id="@+id/tvForgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoặc đăng nhập với"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="30dp"
                android:textSize="19sp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/lnLoginFB"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/boder_login"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconfb"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/lnLoginGG"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/boder_login"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icongoogle"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
               <TextView
                   android:layout_marginLeft="15dp"
                   android:layout_width="190dp"
                   android:layout_height="match_parent"
                   android:textSize="18dp"
                   android:text="Bạn chưa có tài khoản?"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvSigup_login"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue_login"
                    android:textSize="18dp"
                    android:text="Đăng kí"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>